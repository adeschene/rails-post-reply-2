<%# Create a comment form for a specific topic, with placeholders %>
<%= form_with model: [@topic, @topic.comments.build] do |form| %>
  <div class="form-group h-100 mb-3">
    <%= form.text_area :body, class: "form-control", placeholder: "Body", rows: "4" %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-secondary" %>
  </div>
<% end %>
