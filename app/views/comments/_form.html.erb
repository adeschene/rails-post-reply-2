<%# Create a comment form for a specific topic, with placeholders %>
<%= form_with model: [@topic, @topic.comments.build] do |form| %>
  <div class="field input-field">
    <%= form.label :body %>
    <%= form.text_area :body, class: "materialize-textarea", rows: "4" %>
  </div>
  <% if user_signed_in? %>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <% end %>

  <div class="field input-field">
    <%= form.submit "Submit", class: "btn light-blue accent-4" %>
  </div>
<% end %>
