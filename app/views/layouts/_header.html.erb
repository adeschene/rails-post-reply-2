<%# Avatar dropdown content; shown when avatar is hovered over %>
<ul id="avatar-dropdown" class="dropdown-content">
  <li>
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'center-align' %>
  </li>
  <li>
    <%= link_to "Settings", edit_user_registration_path, class: 'center-align' %>
  </li>
</ul>

<nav>
  <div class="nav-wrapper navbar-x-spacers">
    <%= link_to "Rails Message Board", root_path, class: "brand-logo left" %>
    <ul id="nav-mobile" class="right">
      <li><%= link_to "Topics List", topics_path %></li>
      <% if user_signed_in? %>
        <%# Triggers the dropdown on hover %>
        <li><a class="dropdown-trigger" data-target="avatar-dropdown">
          <div class="navbar-avatar-container">
            <div class="navbar-avatar-size">
              <%= image_tag user_avatar(current_user), class: 'avatar' %>
            </div>
            <i class="material-icons right" id="navbar-down-arrow">arrow_drop_down</i>
          </div>
        </a></li>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path %></li>
        <li><%= link_to "Log In", new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
