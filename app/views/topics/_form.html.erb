<%# Create a form for topic that has placeholders %>
<%= form_with model: topic do |form| %>
  <div class="form-group mb-3">
    <%= form.text_field :title, class: "form-control mb-1", placeholder: "Subject" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Body", rows: "4" %>
  </div>

  <div class="form-group ms-2">
    <%= form.submit "Submit", class: "btn btn-secondary mb-3" %>
  </div>
<% end %>
